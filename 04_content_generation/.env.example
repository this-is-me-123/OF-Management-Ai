# Environment variables for 04_content_generation module
# Copy this file to .env and fill in your real credentials

# OpenAI API key for caption generation
OPENAI_API_KEY=

# Runway ML API key for video generation
RUNWAY_API_KEY=

# Stable Diffusion API URL (e.g. local WebUI)
SD_API_URL=http://127.0.0.1:7860/sdapi/v1/txt2img

# Email settings for error notifications (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_TO=

# Optional: Image engine API key for generate_image.js
IMAGE_ENGINE_API_KEY=
